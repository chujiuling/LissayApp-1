<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2eded"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d81e06">

        <Button
            android:id="@+id/AboutLissayBack"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:textSize="16sp"
            android:text="返回"
            android:textColor="#fff"

            />



        <TextView
            android:id="@+id/AboutLissayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关于听说"
            android:textColor="#fff"
            android:textSize="24sp"
            />
        <Button
            android:id="@+id/DiarySend"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:textSize="16sp"
            android:text=""
            android:textColor="#fff"

            />
    </LinearLayout>


   <TextView
       android:layout_width="match_parent"
       android:layout_height="260dp"
       android:layout_marginTop="40dp"
       android:background="#ffffff"
       android:text="        听说是一个集读写收藏日记为主体，提供一个没有社交、没有赞，展现真实自我的平台。app采用完全匿名的形式，带来了与传统的网络社交所不同的独特感受，让您在不错过记录生活珍贵点滴的同时还可随机收到陌生人分享的日记。排除了好友，赞，社交等流行元素后，在这浮躁的年代，希望我们能听到自己内心最真实的声音。"
       android:textSize="20sp"
       android:padding="18dp"
       />
    <RelativeLayout
        android:id="@+id/lissay_Update"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="80dp"
        android:background="#ffffff"
        android:clickable="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="版本更新升级"
            android:textColor="#353535"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/my_arror" />

    </RelativeLayout>











</LinearLayout>